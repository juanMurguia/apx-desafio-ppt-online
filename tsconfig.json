{
    "compilerOptions": {
      "module": "ESNext",
      "target": "ESNext",
      "moduleResolution": "node",
      "outDir": "./dist",
      "resolveJsonModule": true,
      "allowJs": true,
      "checkJs": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true
    },
  "include": ["./server/**/*.ts"], 
  "exclude": ["node_modules"] 
}